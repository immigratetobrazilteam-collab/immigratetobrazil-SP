{
  "version": "3.0.0",
  "state": "sp",
  "interactive": {
    "animations": {
      "pageLoad": {
        "enabled": true,
        "type": "fadeIn",
        "duration": 500,
        "easing": "easeOut"
      },
      "scrollReveal": {
        "enabled": true,
        "threshold": 0.15,
        "animation": "slideUp",
        "delay": 100,
        "distance": "20px"
      },
      "hover": {
        "scale": 1.05,
        "duration": 300,
        "easing": "spring"
      },
      "click": {
        "scale": 0.95,
        "duration": 100,
        "feedback": true
      },
      "focus": {
        "glow": true,
        "scale": 1.02,
        "duration": 200
      }
    },
    "gestures": {
      "swipe": {
        "enabled": true,
        "threshold": 50,
        "velocity": 0.3,
        "directions": [
          "left",
          "right",
          "up",
          "down"
        ]
      },
      "pinchZoom": {
        "enabled": true,
        "threshold": 0.1,
        "min": 0.5,
        "max": 3
      },
      "longPress": {
        "enabled": true,
        "duration": 500,
        "feedback": "vibrate"
      },
      "doubleTap": {
        "enabled": true,
        "delay": 300,
        "action": "zoom"
      },
      "pan": {
        "enabled": true,
        "threshold": 10,
        "momentum": true
      },
      "rotate": {
        "enabled": true,
        "threshold": 5
      }
    },
    "microInteractions": {
      "buttonPress": {
        "scale": 0.95,
        "duration": "100ms",
        "haptic": true
      },
      "cardHover": {
        "scale": 1.02,
        "shadow": "lg",
        "duration": "200ms",
        "lift": "-2px"
      },
      "inputFocus": {
        "scale": 1.01,
        "glow": true,
        "duration": "150ms",
        "ring": true
      },
      "linkHover": {
        "opacity": 0.8,
        "underline": true,
        "duration": "100ms"
      },
      "iconSpin": {
        "rotate": "360deg",
        "duration": "500ms",
        "easing": "linear"
      },
      "tooltipShow": {
        "scale": 1,
        "opacity": 1,
        "duration": "150ms",
        "delay": "500ms"
      },
      "modalOpen": {
        "scale": 1,
        "opacity": 1,
        "blur": "0px",
        "duration": "300ms",
        "backdrop": true
      },
      "drawerSlide": {
        "translateX": "0",
        "duration": "300ms",
        "easing": "easeOut"
      },
      "accordionExpand": {
        "height": "auto",
        "duration": "300ms",
        "easing": "easeInOut"
      },
      "tabSwitch": {
        "fadeIn": true,
        "duration": "200ms"
      }
    },
    "transitions": {
      "pageTransition": {
        "type": "slide",
        "duration": 400,
        "direction": "left",
        "easing": "easeInOut"
      },
      "modalTransition": {
        "type": "fade",
        "duration": 300,
        "scale": true
      },
      "drawerTransition": {
        "type": "slide",
        "duration": 300,
        "overlay": true
      },
      "tabTransition": {
        "type": "fade",
        "duration": 200
      },
      "tooltipTransition": {
        "type": "fade",
        "duration": 150,
        "scale": true
      }
    },
    "scrollEffects": {
      "parallax": {
        "enabled": true,
        "speed": 0.5,
        "elements": [
          ".hero",
          ".feature-image"
        ]
      },
      "fadeOnScroll": {
        "enabled": true,
        "threshold": 0.1
      },
      "stickyHeader": {
        "enabled": true,
        "offset": 0,
        "shadow": true
      },
      "progressBar": {
        "enabled": true,
        "position": "top",
        "color": "#3a4660"
      },
      "scrollToTop": {
        "enabled": true,
        "threshold": 500,
        "position": "bottom-right"
      }
    }
  },
  "features": {
    "darkMode": {
      "enabled": true,
      "default": "light",
      "storage": "localStorage",
      "variants": [
        "light",
        "lightSoft",
        "dark",
        "darkPure",
        "highContrast"
      ],
      "colors": {
        "light": {
          "background": "#ffffff",
          "text": "#d8d8d8",
          "primary": "#3a4660"
        },
        "lightSoft": {
          "background": "#fafafa",
          "text": "#4a5568",
          "primary": "#455473"
        },
        "dark": {
          "background": "#1a1a1a",
          "text": "#f0f0f0",
          "primary": "#455473"
        },
        "darkPure": {
          "background": "#000000",
          "text": "#ffffff",
          "primary": "#455473"
        },
        "highContrast": {
          "background": "#000000",
          "text": "#ffffff",
          "primary": "#ffffff"
        }
      },
      "transition": "300ms ease"
    },
    "i18n": {
      "enabled": true,
      "default": "pt-BR",
      "supported": [
        "pt-BR",
        "en-US",
        "es-ES",
        "fr-FR",
        "de-DE",
        "it-IT",
        "ja-JP",
        "zh-CN",
        "ar-SA",
        "ru-RU"
      ],
      "fallback": "en-US",
      "dateFormats": {
        "pt-BR": "DD/MM/YYYY",
        "en-US": "MM/DD/YYYY",
        "es-ES": "DD/MM/YYYY",
        "fr-FR": "DD/MM/YYYY",
        "de-DE": "DD.MM.YYYY"
      },
      "numberFormats": {
        "pt-BR": {
          "decimal": ",",
          "thousand": ".",
          "currency": "R$"
        },
        "en-US": {
          "decimal": ".",
          "thousand": ",",
          "currency": "$"
        },
        "es-ES": {
          "decimal": ",",
          "thousand": ".",
          "currency": "€"
        }
      },
      "rtl": [
        "ar-SA",
        "he-IL"
      ]
    },
    "rtl": {
      "enabled": true,
      "languages": [
        "ar-SA",
        "he-IL",
        "fa-IR",
        "ur-PK"
      ],
      "autoDetect": true,
      "transformations": {
        "textAlign": "right",
        "direction": "rtl",
        "float": "reversed",
        "margin": "reversed",
        "padding": "reversed"
      }
    },
    "analytics": {
      "enabled": true,
      "trackPageViews": true,
      "trackClicks": true,
      "trackScrollDepth": true,
      "trackFormSubmissions": true,
      "trackErrors": true,
      "trackPerformance": true,
      "customEvents": true
    },
    "performance": {
      "lazyLoading": {
        "enabled": true,
        "threshold": "200px",
        "images": true,
        "iframes": true,
        "components": true
      },
      "imageOptimization": {
        "enabled": true,
        "formats": [
          "webp",
          "avif"
        ],
        "responsive": true,
        "placeholder": "blur"
      },
      "codeсplitting": {
        "enabled": true,
        "chunks": [
          "vendor",
          "common",
          "runtime"
        ],
        "dynamic": true
      },
      "prefetch": {
        "links": true,
        "images": true,
        "fonts": true
      },
      "caching": {
        "strategy": "stale-while-revalidate",
        "maxAge": 3600
      }
    },
    "search": {
      "enabled": true,
      "placeholder": "Search...",
      "minChars": 2,
      "maxResults": 10,
      "debounce": 300,
      "highlight": "#845007",
      "suggestions": true,
      "history": true,
      "filters": true,
      "fuzzy": true,
      "hotkey": "/",
      "categories": [
        "all",
        "services",
        "pages",
        "content"
      ]
    },
    "filtering": {
      "enabled": true,
      "types": [
        "text",
        "range",
        "select",
        "multiselect",
        "date",
        "checkbox",
        "radio",
        "toggle"
      ],
      "operators": [
        "equals",
        "contains",
        "startsWith",
        "endsWith",
        "greaterThan",
        "lessThan",
        "between",
        "in",
        "notIn"
      ],
      "caseSensitive": false,
      "diacriticSensitive": false,
      "debounce": 300
    },
    "sorting": {
      "enabled": true,
      "directions": [
        "asc",
        "desc"
      ],
      "types": [
        "string",
        "number",
        "date",
        "boolean"
      ],
      "multiColumn": true,
      "persistence": true
    },
    "accessibility": {
      "reducedMotion": true,
      "highContrast": true,
      "screenReader": true,
      "keyboardNavigation": true,
      "focusTrap": true,
      "skipLinks": true,
      "ariaLive": true,
      "voiceControl": false
    }
  },
  "components": {
    "header": {
      "sticky": true,
      "hideOnScroll": false,
      "transparent": true,
      "backgroundColor": "#212121",
      "blur": true,
      "shadow": true,
      "height": "80px"
    },
    "hero": {
      "parallax": true,
      "autoplay": true,
      "interval": 5000,
      "animation": "fade",
      "controls": true,
      "indicators": true,
      "pauseOnHover": true
    },
    "cards": {
      "hoverEffect": "lift",
      "clickable": true,
      "animation": "scaleIn",
      "loading": "skeleton",
      "fallback": true
    },
    "breadcrumb": {
      "enabled": true,
      "separator": "/",
      "showHome": true,
      "maxItems": 5,
      "collapsible": true
    },
    "tabs": {
      "variant": "underline",
      "lazy": true,
      "keepAlive": false,
      "animation": "fade"
    },
    "accordion": {
      "multiple": false,
      "collapsible": true,
      "animated": true,
      "icon": "chevron"
    },
    "tooltip": {
      "position": "top",
      "trigger": "hover",
      "delay": 500,
      "arrow": true,
      "interactive": false
    },
    "popover": {
      "position": "bottom",
      "trigger": "click",
      "closeOnOutside": true,
      "arrow": true,
      "offset": 8
    },
    "rating": {
      "max": 5,
      "precision": 0.5,
      "readonly": false,
      "size": "md",
      "showValue": false
    },
    "badge": {
      "position": "top-right",
      "variant": "dot",
      "max": 99,
      "showZero": false
    },
    "avatar": {
      "fallback": "initials",
      "loading": "lazy",
      "status": false,
      "groupable": true
    },
    "pagination": {
      "showFirstLast": true,
      "showPrevNext": true,
      "showPageNumbers": true,
      "maxPages": 7,
      "compact": false
    },
    "infiniteScroll": {
      "enabled": true,
      "threshold": "200px",
      "loader": true,
      "endMessage": true
    },
    "filter": {
      "position": "sidebar",
      "collapsible": true,
      "showCount": true,
      "clearAll": true,
      "apply": "auto"
    },
    "forms": {
      "validation": "realtime",
      "autoSave": true,
      "placeholders": true,
      "helpText": true,
      "errorDisplay": "inline",
      "successFeedback": true
    },
    "modal": {
      "backdrop": true,
      "closeOnEscape": true,
      "closeOnBackdrop": true,
      "centered": true,
      "scrollable": true,
      "size": "md"
    },
    "drawer": {
      "position": "right",
      "backdrop": true,
      "closeOnEscape": true,
      "resizable": false
    },
    "toast": {
      "position": "top-right",
      "duration": 3000,
      "closable": true,
      "pauseOnHover": true,
      "max": 5,
      "animation": "slide"
    },
    "notification": {
      "position": "top-right",
      "duration": 5000,
      "closable": true,
      "action": true,
      "sound": false
    },
    "progressBar": {
      "striped": false,
      "animated": false,
      "showValue": false,
      "color": "#3a4660"
    },
    "spinner": {
      "type": "circle",
      "size": "md",
      "color": "#3a4660",
      "overlay": false
    },
    "loader": {
      "type": "skeleton",
      "animation": "pulse",
      "count": 1
    },
    "carousel": {
      "autoplay": true,
      "interval": 5000,
      "loop": true,
      "controls": true,
      "indicators": true,
      "pauseOnHover": true,
      "swipeable": true,
      "draggable": true,
      "fade": false
    },
    "navigation": {
      "mega": true,
      "sticky": true,
      "mobile": "drawer",
      "search": true,
      "dropdown": "hover"
    }
  }
}